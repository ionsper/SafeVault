@model SafeVault.Controllers.ProfileController.ProfileUpdateViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Your profile</h2>

        @if (ViewData["Success"] != null)
        {
            <div class="alert alert-success">@ViewData["Success"]</div>
        }

        <form asp-action="Update" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <div class="input-group">
                    <input asp-for="Username" class="form-control" readonly />
                    <button type="button" class="btn btn-outline-secondary" id="edit-username">✎</button>
                </div>
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <input asp-for="Email" class="form-control" readonly />
                    <button type="button" class="btn btn-outline-secondary" id="edit-email">✎</button>
                </div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <hr />

            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label">Current password (required to save changes)</label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="CurrentPassword"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">New password (leave empty to keep current)</label>
                <input asp-for="NewPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            function makeEditable(buttonId, inputSelector) {
                var btn = document.getElementById(buttonId);
                if (!btn) return;
                btn.addEventListener('click', function () {
                    var inp = document.querySelector(inputSelector);
                    if (!inp) return;
                    inp.readOnly = false;
                    inp.focus();
                });
            }

            makeEditable('edit-username', '[name=Username]');
            makeEditable('edit-email', '[name=Email]');
        })();
    </script>
}